<!-- Modal -->

      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title" id="myModalLabel">New Event</h4>
      </div>
    <%= form_for @event, remote: true do |f|%>  
      <div class="modal-body">  
        <%= f.hidden_field :dashboard_id, value: @dashboard.id %>        
          <div class='input-group date' id='datetimepicker1'>
            <div class="form-group">
              <%= f.label :date %>
              <span class="input-group-addon">
                <%= f.text_field :date, class: 'form-control' %>
                <span class="glyphicon glyphicon-calendar"></span>
              </span>
            </div>
          </div>
          
        <div class="form-group">
          <%= f.label :kind %>:
          <%= f.select :kind, Event.kinds.keys.to_a, class: 'form-control' %>
        </div>
          
        <div class="form-group">
          <%= f.label :description %>:
          <%= f.text_area :description, class: 'form-control' %>
        </div>
          
        <div class="form-group">
          <%= f.label :amount %>
          <%= f.text_field :amount, {value:nil, placeholder: '0,00', class: 'form-control'} %>
        </div>
        
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
        <%= f.submit "Save", class: "btn btn-primary" %>
      </div>
    <% end %>


<script>
    $(function () {
        $('#datetimepicker1').datetimepicker({
          format: 'YYYY-MM-DD hh:mm:ss'
        });
    });
</script>