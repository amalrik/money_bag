<div class="container">
  <div class="row">
    <div class="col-xs-12">
      <div class="table-responsive">
        <table summary="This table shows your finantial events" class="table table-bordered table-hover">
          <caption class="text-center">Here are your incomes and expenses</caption>
          <thead>
            <tr>
              <th>Date</th>
              <th>Description</th>
              <th>Type</th>
              <th>Amount</th>
            </tr>
          </thead>
          <tbody>
            <% @events.each do |event| %>
              <tr>
                <td><%= event.date %></td>
                <td><%= event.description %></td>
                <td><%= event.kind %></td>
                <td><%= event.amount %></td>
              </tr>
            <% end %>
          </tbody>
          <tfoot>
            <tr>
              <td colspan="5" class="text-center">Your current balance is <%= humanized_money_with_symbol(@dashboard.balance) %></td>
            </tr>
          </tfoot>
        </table>
      </div><!--end of .table-responsive-->
    </div>
  </div>
</div>
